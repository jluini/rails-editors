<h1>Todos los documentos</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Ver</th>
    <th>Editar</th>
    <th>Editar2</th>
    <th>Clonar</th>
    <th>Eliminar</th>
  </tr>
  <% @documents.each do |document| %>
    <tr>
      <td><%= document.id %></td>
      <td><%= link_to 'Ver', document_path(document) %></td>
      <td><%= link_to 'Editar', edit_document_path(document) %></td>
      <td><%= link_to 'Editar2', edit_document2_path(document) %></td>
      <td><%= link_to 'Clonar', clone_document_path(document) %></td>
      <td><%= link_to 'Eliminar', destroy_document_path(document), method: :delete, data: { confirm: '¿Estás seguro/a?' } %></td>
    </tr>
  <% end %>
</table>

<br>

