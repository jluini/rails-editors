<h1>All documents</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Edit</th>
    <th>Remove</th>
  </tr>
  <% @documents.each do |document| %>
    <tr>
      <td><%= document.id %></td>
      <td><%= link_to 'Edit', edit_document_path(document) %></td>
      <td><%= link_to 'Remove', destroy_document_path(document), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'Create new document', new_document_path %>
